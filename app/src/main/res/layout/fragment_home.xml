                        android:src="@drawable/rolls_royce" />

                    <ImageView
                        android:id="@+id/saab"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="100sp"
                        android:src="@drawable/saab" />

                    <ImageView
