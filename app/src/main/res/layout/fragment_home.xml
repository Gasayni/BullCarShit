<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/alfa_romeo"
                        android:layout_width="0sp"
                        android:layout_height="100sp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/alfa_romeo"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageView
                        android:id="@+id/audi"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="100sp"
                        android:src="@drawable/audi" />

                    <ImageView
                        android:id="@+id/bentley"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="100sp"
                        android:src="@drawable/bentley" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/borgward"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="100sp"
                        android:src="@drawable/borgward" />

                    <ImageView
                        android:id="@+id/bmw"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="100sp"
                        android:src="@drawable/bmw" />

                    <ImageView
                        android:id="@+id/bugatti"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="100sp"
                        android:src="@drawable/bugatti" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/citroen"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="100sp"
                        android:src="@drawable/citroen" />

                    <ImageView
                        android:id="@+id/dacia"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="100sp"
                        android:src="@drawable/dacia" />

                    <ImageView
                        android:id="@+id/ds"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="100sp"
                        android:src="@drawable/ds" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

